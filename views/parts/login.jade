md-content(layout='column', layout-align='center',
           layout-padding='', ng-if='!activeUser',
           flex-sm='75', flex-md='65', flex-lg='55', flex-gt-lg='35')
  form(ng-submit='LoginCtrl.login()')
    md-input-container
      label Username
      input(name='username', type='text', ng-model='LoginCtrl.username', required='')
    md-input-container
      label Password
      input(name='password', type='password', ng-model='LoginCtrl.password', required='')
    div(layout='column')
      md-button(class='md-raised md-primary', type='submit') Login
